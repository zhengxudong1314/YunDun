<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dahua.searchandwarn.modules.warning.activity.SW_TreeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="13dp"
            android:src="@drawable/sw_icon_back" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/border_radius_gray_big"
            android:hint="请输入地址"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColorHint="@color/tvColorTwo"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_sure"
            android:gravity="center"
            android:text="@string/confirm"
            android:layout_width="50dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tvColorTwo" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:id="@+id/rv_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
